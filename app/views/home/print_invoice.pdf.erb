<style>
html, body, div, p{
	margin: 0;
	padding:0;
}
</style>
<div style="width:100%; display: inline-block">
	<div style="width:48%;float:left">
		<h1><%= @cdetails[0]["cname"] %></h1>
		<p><%= @cdetails[0]["street"] %></p>
		<p><%= @cdetails[0]["town"] %></p>
		<p><%= @cdetails[0]["phno"] %></p>
		<p><%= @cdetails[0]["email"] %></p>
	</div>
	<div style="width:48%;float:right; text-align:right">
		<h1>INVOICE</h1>
		<p><%= @cldetails[0]["date"] %></p>
		<p><%= @cldetails[0]["ino"] %></p>
		<p><%= @cldetails[0]["po"] %></p>
		<p><%= @cldetails[0]["name"] %></p>
		<p><%= @cldetails[0]["clname"] %></p>
	</div>
</div>
<div>
<p><%= @text1.html_safe %></p>
</div>
</div>
<div>
<table>
  <tr>
    <th>Index</th>
	<th>HSN/SSN</th>
    <th>Item Description</th>
	<th>Quantity</th>
	<th>Unit Price</th>
	<th>Total</th>
  </tr>
  <% slno = 0%>
  <% @items.each do |item| %>
  <tr>
    <td><%= slno+=1 %></td>
	<td><%= item["sn"] %>
    <td><%= item["item"] %></td>
	<td><%= item["qty"] %></td>
	<td><%= item["up"] %></td>
	<td><%= item["tot"] %></td>
  </tr>
  <%end%>
  <tfoot>
    <tr>
    <td colspan="5">
    <p> <%= @footer %>
    </td>
    </tr>
  </tfoot>
</table>
</div>
<div>
<p><%= @text2.html_safe %></p>
</div>